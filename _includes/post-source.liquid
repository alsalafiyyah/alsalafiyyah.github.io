<hr/>
<footer>
<dl>
{% if page.source %}
  <dt>{{site.data.settings.post.source}}:</dt>
   <dd>
    {{ page.source}}
    {% else %}
    {{ site.source.name}}
   </dd>
{% endif %}

{% if page.shaykhs %}
  <dt>{{site.data.settings.post.muftis}}:</dt>
   <dd>
    {{ page.shaykhs | join: ", "}}
    {% else %}
    {{ site.shaykhs.name | join: ", " }}
   </dd>
{% endif %}

{% if page.muftis %}
  {% if page.muftis.chairman %}
  <dt>{{ site.data.settings.page.chairman }}:</dt>
   {% for chairman in page.muftis.chairman %}
   <dd>
    <a title="{{ chairman.name }}" href="{{ chairman.url | relative_url }}">
     {{ chairman.name }}
    </a>
   </dd>
   {% endfor %}
   {% else %}
  {% endif %}
  {% if page.muftis.deputy_chairman %}
  <dt>{{site.data.settings.page.deputy_chairman}}:</dt>
   {% for deputy_chairman in page.muftis.deputy_chairman %}
   <dd>
    <a title="{{ deputy_chairman.name }}" href="{{ deputy_chairman.url | relative_url }}">
     {{ deputy_chairman.name }}
    </a>
   </dd>
   {% endfor %}
   {% else %}
  {% endif %}
  {% if page.muftis.members %}
  <dt>{{site.data.settings.page.members}}:</dt>
   {% for members in page.muftis.members %}
   <dd>
    <a title="{{ members.name }}" href="{{ members.url | relative_url }}">
     {{ members.name }}
    </a>
   </dd>
   {% endfor %}
   {% else %}
  {% endif %}
  {% if page.muftis.shaykh %}
   {% for shaykh in page.muftis.shaykh %}
    <dt>Shaykh:</dt>
     <dd>
      <a href="{{ shaykh.url | relative_url }}" title="{{ shaykh.name }}">{{ shaykh.name }}</a></dd>
   {% endfor %}
   {% else %}
  {% endif %}
{% endif %}

  <dt>{{site.data.settings.post.share}}:</dt>
   <dd>
<ul class="icons">
 <li><a href="https://twitter.com/intent/tweet?text={{ page.title | default:"" | uri_escape}}&url={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}" class="icon brands fab fa-twitter" rel="nofollow" target="_blank" title="Share on Twitter"><span class="label">{{site.data.settings.social.tw}}</span></a></li>
 <li><a href="https://facebook.com/sharer.php?u={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}" rel="nofollow" target="_blank" title="Share on Facebook" class="icon brands fab fa-facebook-f"><span class="label">{{site.data.settings.social.fb}}</span></a></li>
 <li><a href="https://telegram.me/share/url?url={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}&text={{ page.title | default:"" | uri_escape}}" rel="nofollow" target="_blank" title="Share on Telegram" class="icon brands fab fa-telegram-plane"><span class="label">{{site.data.settings.social.tel}}</span></a></li>
 <li><a href="fb-messenger://share?link={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}" title="Share on Facebook Messenger" class="icon brands fab fa-facebook-messenger"><span class="label">{{site.data.settings.social.msgr}}</span></a></li>
 <li><a href="https://wordpress.com/press-this.php?u={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}&t={{ page.title | default:"" | uri_escape}}&s={{ page.title | default:"" | uri_escape}}" title="Share on Wordpress" class="icon brands fab fa-wordpress-simple"><span class="label">{{site.data.settings.social.wp}}</span></a></li>
 <li><a href="http://www.tumblr.com/share/link?url={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}&name={{ page.title }}&description={{ page.title | default:"" | uri_escape}}" rel="nofollow" target="_blank" title="Share on Tumblr" class="icon brands fab fa-tumblr"><span class="label">{{site.data.settings.social.tumblr}}</span></a></li>
 <li><a href="https://wa.me/?text={{ page.title | default:"" | uri_escape}} : {{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}" target="_blank" title="Share on WhatsApp" class="icon brands fab fa-whatsapp"><span class="label">{{site.data.settings.social.wa}}</span></a></li>
</ul>
   </dd>

{% if page.date %}
   <dt><span id='last-modified'></span></dt>
{% endif %}
   <dt>
    <a href="mailto:alsalafiyah@icloud.com?subject=Report&body={{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url | uri_escape}}">
     <i class="fas fa-bug"></i> Report a mistake
    </a>
   </dt>
    
</dl>
</footer>

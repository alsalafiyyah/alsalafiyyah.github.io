<div class="box">
  <ul style="list-style: none;">
  
    {% if page.source %}
    <li>
    <b><span><i class="fas fa-feather-alt"></i> {{site.data.settings.post.source}}:</span></b>
    {{ page.source}}
    {% else %}
    {{ site.source.name}}
    </li>
    {% endif %}
    
    {% if page.shaykhs %}
    <li>
      <b><span> <i class="fas fa-feather-alt"></i> {{site.data.settings.post.muftis}}:</span></b>
    {{ page.shaykhs | join: ", "}}
    {% else %}
    {{ site.shaykhs.name | join: ", " }}
    </li>
    {% endif %}
    
  </ul>
</div>

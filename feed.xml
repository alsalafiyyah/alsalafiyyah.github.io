---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
>
	<channel>
		<title>{{ site.name | xml_escape | strip_html }}</title>
		<description>{% if site.description %}{{ site.description | xml_escape | strip_html }}{% endif %}</description>		
		<sy:updatePeriod>{{ site.feed_update_period | default: "daily" | xml_escape | strip_html }}</sy:updatePeriod>
		<sy:updateFrequency>{{ site.feed_update_frequency | default: 1 | xml_escape | strip_html }}</sy:updateFrequency>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />
		<lastBuildDate>{% for post in site.posts limit:1 %}{{ post.date | date_to_rfc822 | strip_html }}{% endfor %}</lastBuildDate>
		{% assign feed_items = site.feed_items | default: 10 %}
		{% for post in site.posts limit:feed_items %}
			<item>
				<title>{{ post.title | xml_escape | strip_html }}</title>
				{% if post.author.name %}
					<dc:creator>{{ post.author.name | xml_escape | strip_html }}</dc:creator>
				{% endif %}
				{% if post.excerpt %}
					<description>{{ post.excerpt | xml_escape | strip_html }}</description>
				{% else %}
					<description>{{ post.content | xml_escape | strip_html }}</description>
				{% endif %}
				<pubDate>{{ post.date | date_to_rfc822 | strip_html }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
